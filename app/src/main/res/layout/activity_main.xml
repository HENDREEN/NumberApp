<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.numberapp.MainActivity"
    android:background="@drawable/backgroundi">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/rectangle_shape"
        android:text="NUMBERS"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/zero"
        android:layout_width="match_parent"
        android:layout_below="@id/text"
        android:id="@+id/number_image"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="350dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_shape"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ZERO"
        android:id="@+id/number_text"
        android:textColor="#000000"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="18sp"
        android:layout_below="@id/number_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_below="@id/number_text"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:id="@+id/previous"
        android:background="@drawable/ic_skip_previous"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:id="@+id/player"
            android:background="@drawable/ic_play_circle_filled_black_24dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:id="@+id/next"
            android:background="@drawable/ic_skip_next"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
